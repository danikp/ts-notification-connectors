{
  "name": "ts-notification-connectors",
  "version": "1.0.0",
  "description": "Lightweight, SDK-free notification connectors for email (SES, Resend, Mailgun), SMS (Vonage, Twilio, Plivo, SNS), push (FCM, Expo, APNs), and chat (Telegram, Slack, WhatsApp)",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepublishOnly": "npm run typecheck && npm test && npm run build"
  },
  "keywords": [
    "notification",
    "email",
    "sms",
    "push",
    "aws-ses",
    "resend",
    "mailgun",
    "vonage",
    "twilio",
    "plivo",
    "sns",
    "fcm",
    "expo",
    "apns",
    "chat",
    "telegram",
    "slack",
    "whatsapp",
    "novu",
    "lightweight"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "author": "",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "dependencies": {
    "aws4": "^1.13.0",
    "axios": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/aws4": "^1.11.6",
    "@types/node": "^20.11.0",
    "eslint": "^9.39.3",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^2.0.0"
  }
}
